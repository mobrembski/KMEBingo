<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                style="@style/RowParameterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="Version:" />

            <TextView
                android:id="@+id/VersionValue"
                style="@style/RowParameterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/TimeOnGas"
                style="@style/RowParameterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="Time on GAS:" />

            <TextView
                android:id="@+id/TimeOnGasValue"
                style="@style/RowParameterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/RegistrationPlate"
                style="@style/RowParameterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="Registration Plate: " />

            <TextView
                android:id="@+id/RegistrationPlateValue"
                style="@style/RowParameterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RegistrationPlateValue" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/DateOfInstallation"
                style="@style/RowParameterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Installation:" />

            <TextView
                android:id="@+id/DateOfInstallationValue"
                style="@style/RowParameterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/TankLevel"
                style="@style/RowParameterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tank level:" />

            <TextView
                android:id="@+id/TankLevelValue"
                style="@style/RowParameterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="Change registration" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            layout="@layout/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
    </RelativeLayout>
</RelativeLayout>