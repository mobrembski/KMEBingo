<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="Transparent" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="InfoRowParameterName">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="InfoRowParameterValue">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="InfoTabButton">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/ButtonText</item>
    </style>

    <style name="SettingsRowParameterItem">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/SettingsRowParameterItem</item>
        <item name="android:paddingRight">@dimen/SettingsRowParameterItem</item>
    </style>

    <style name="SettingsRowParameterSubItem">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/SettingsRowParameterItem</item>
        <item name="android:paddingRight">@dimen/SettingsRowParameterItem</item>
    </style>

    <style name="StatusTextNormal">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/ValueOK</item>
    </style>

    <style name="StatusTextNotImportant">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/ValueNotImportant</item>
    </style>

    <style name="StatusTextDisabled">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/ValueDisabled</item>
    </style>

    <style name="StatusTextCritical">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/ValueNotOK</item>
    </style>

    <style name="GraphRowDescription">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GraphRowValue">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="GraphRowAdditionalValue">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="FooterStyleSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="SpinnerAppTheme" parent="android:Widget.Holo.Spinner">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/apptheme_spinner_background_holo_dark</item>
        <item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_dark</item>
    </style>

    <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/apptheme_btn_radio_holo_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SpinnerItemAppTheme" parent="android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:spinnerStyle">@style/SpinnerAppTheme</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemAppTheme</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemAppTheme</item>
        <item name="android:windowActionBar">true</item>

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@null</item>
    </style>


</resources>
