<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="InfoRowParameterName">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="InfoRowParameterValue">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="InfoTabButton">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/ButtonText</item>
    </style>

    <style name="SettingsRowParameterName">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StatusTextNormal">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/ValueOK</item>
    </style>

    <style name="StatusTextNotImportant">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/ValueNotImportant</item>
    </style>

    <style name="StatusTextDisabled">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/ValueDisabled</item>
    </style>

    <style name="StatusTextCritical">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/ValueNotOK</item>
    </style>

    <style name="GraphRowDescription">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GraphRowValue">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="GraphRowAdditionalValue">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="FooterStyleSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

</resources>
