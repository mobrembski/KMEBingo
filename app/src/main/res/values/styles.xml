<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="Transparent" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="InfoRowParameterName">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
    </style>

    <style name="InfoRowParameterValue">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:gravity">right</item>
    </style>

    <style name="InfoTabButton" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/ButtonText</item>
        <item name="android:background">@drawable/button_default</item>
    </style>

    <style name="SettingsRowParameterItem">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:paddingLeft">@dimen/SettingsRowParameterItem</item>
        <item name="android:paddingRight">@dimen/SettingsRowParameterItem</item>
    </style>

    <style name="SettingsRowParameterSubItem">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:paddingLeft">@dimen/SettingsRowParameterItem</item>
        <item name="android:paddingRight">@dimen/SettingsRowParameterItem</item>
    </style>

    <style name="StatusTextNormal">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/ValueOK</item>
    </style>

    <style name="StatusTextNotImportant">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/ValueNotImportant</item>
    </style>

    <style name="StatusTextDisabled">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/ValueDisabled</item>
    </style>

    <style name="StatusTextCritical">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/ValueNotOK</item>
    </style>

    <style name="GraphRowDescription">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GraphRowValue">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="GraphRowAdditionalValue">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="FooterStyleSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="SpinnerAppTheme" parent="android:Widget.Holo.Spinner">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/apptheme_spinner_background_holo_dark</item>
        <item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_dark</item>
    </style>

    <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/apptheme_btn_radio_holo_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SpinnerItemAppTheme" parent="android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AboutTheme" parent="android:Theme.Holo.Light.Dialog.MinWidth">
        <item name="android:windowAnimationStyle">@style/AboutDialogAnimation</item>
    </style>

    <style name="AboutDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="ActionBarTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textScaleX">0.8</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MyMaterialTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="dialog_style">@style/Theme.AppCompat.Light.Dialog</item>
        <item name="sensors_dialog_style">@style/Theme.AppCompat.Light.Dialog.MinWidth</item>
        <item name="action_bar_color">@color/ActionBarLight</item>
        <item name="progress_dialog_style">@style/ProgressDialogLight</item>
    </style>

    <style name="MyMaterialThemeDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="dialog_style">@style/Theme.AppCompat.Dialog</item>
        <item name="sensors_dialog_style">@style/Theme.AppCompat.Dialog.MinWidth</item>
        <item name="action_bar_color">@color/ActionBarDark</item>
        <item name="android:popupMenuStyle">@style/Widget.AppCompat.PopupMenu</item>
        <item name="progress_dialog_style">@style/ProgressDialogDark</item>
    </style>

    <style name="SettingsTableRow">
        <item name="android:baselineAligned">false</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="DefaultDisplayItem">
        <item name="android:layout_marginLeft">@dimen/screen_item_padding_small</item>
        <item name="android:layout_marginRight">@dimen/screen_item_padding_small</item>
    </style>

    <style name="ProgressDialogDark" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:background">@color/ActionBarDark</item>
    </style>
    <style name="ProgressDialogLight" parent="Base.Theme.AppCompat.Light.Dialog"/>

    <attr name="dialog_style" format="reference"/>
    <attr name="sensors_dialog_style" format="reference"/>
    <attr name="action_bar_color" format="reference"/>
    <attr name="progress_dialog_style" format="reference"/>


</resources>
