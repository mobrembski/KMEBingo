<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:orientation="vertical">

            <com.mobrembski.kmeviewer.ExpandableRowView
                android:id="@+id/LambdaSettingsRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:DescriptionText="Lambda" />

            <com.mobrembski.kmeviewer.ExpandableRowView
                android:id="@+id/ActuatorSettingsRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:DescriptionText="Actuator" />

            <com.mobrembski.kmeviewer.ExpandableRowView
                android:id="@+id/TPSSettingsRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:DescriptionText="TPS" />

            <com.mobrembski.kmeviewer.ExpandableRowView
                android:id="@+id/RPMsSettingsRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:DescriptionText="RPMs" />

            <com.mobrembski.kmeviewer.ExpandableRowView
                android:id="@+id/MiscSettingsRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:DescriptionText="Misc" />

            <Button
                android:id="@+id/factoryResetBtn"
                style="@style/InfoTabButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Factory reset" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>